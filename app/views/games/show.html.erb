<div id="player1_div" class="col-md-3 game-top">
  <p id="player1_name">
    <%= @player1_name %>
  </p>
  <span id="player1_info"></span>
</div>

<div class="col-md-6 game-top">
  <h3>Battle room for game id <span id="game_id"><%= @game.id %></span></h3>
  <p id="main_game_info"></p>
  <p id="next_ship_name"></p>
  <p id="clicked_field_info"></p>
</div>

<div id="player2_div" class="col-md-3 game-top">
  <p id="player2_name">
  </p>
  <span id="player2_info"></span>
</div>

<div id="game_area">
  <p id="direction" style="display: none;">
    Ship direction<br><br>
    <button type="button" id="dir_up" value="up" class="btn btn-direction btn-upward">&#8593;</button><br>
    <span class="btn-group">
      <button type="button" id="dir_left" value="left" class="btn btn-direction">&#8592;</button>
      <button type="button" id="dir_down" value="down" class="btn btn-direction">&#8595;</button>
      <button type="button" id="dir_right" value="right" class="btn btn-direction">&#8594;</button><br>
    </span>
  </p>
</div>

<div id="comments">
  <%= render "comments/comment_form" %>
  <div class="comments_body">
  </div>
</div>

<script type="text/javascript">
  var game = new Game();
  game.initializeGame();
</script>
