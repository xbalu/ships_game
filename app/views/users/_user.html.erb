<% position = @ranks_order.index(user.id) + 1 %>

<tr class="<%= position == 1 ? "first_position" : "" %>">
  <td>
    <% if user.online? %>
      <span class="online">Online</span>
    <% else %>
      <span>Offline</span>
    <% end %>
  </td>
  <td>
    <%= link_to "#{user.nickname}", user_profile_path(user.id), target: "_blank" %>
  </td>
  <td class="user_rank">
    <%= user.rank %>
  </td>
  <td class="user_rank">
    <%= position %>
  </td>
</tr>
